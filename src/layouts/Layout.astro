---
import "../styles/global.css";
import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";
import  SpeedInsights  from "@vercel/speed-insights/astro"
import { getLangFromUrl, useTranslations, getRouteFromUrl } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const route = getRouteFromUrl(Astro.url); // ruta sin prefijo de idioma para construir hreflang

const {
  pageTitle = t('site.title'),
  description = t('site.description'),
  ogimage = {
    url: "/images/imagedefault.webp",
    alt: t('site.imageAlt'),
  },
} = Astro.props;

const siteUrl = new URL(Astro.url).origin;
// Normalizar base del sitio para evitar '//' en canonical y hreflang
const siteBase = (Astro.site ? String(Astro.site).replace(/\/$/, '') : siteUrl);
const SEO = {
  sitename: t('site.sitename'),
  url: siteUrl,
  locale: lang === 'en' ? 'en_US' : 'es_ES',
  author: t('site.author'),
  twitter: "@efeeledev",
};


const twitterimage = `${siteUrl}${ogimage.url}`;
---

<html
  lang={lang}
  class="dark:bg-[#0E0E11] bg-mint-50/5 font-montserrat scroll-smooth"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{pageTitle}</title>
    <!-- Favicon for different platforms -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="icon" href="/favicon-32x32.png" sizes="32x32" />
    <link rel="icon" href="/favicon-16x16.png" sizes="16x16" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="icon" href="/android-chrome-192x192.png" sizes="192x192" />
    <link rel="icon" href="/android-chrome-512x512.png" sizes="512x512" />

    <!-- Web manifest -->
    <link rel="manifest" href="/site.webmanifest" />

    <meta name="description" content={description} />
    <meta name="author" content={SEO.author} />
    <meta name="robots" content="index, follow" />
  <link rel="canonical" href={`${siteBase}${Astro.url.pathname}`}> 
  <!-- Alternate language versions (hreflang) -->
  <link rel="alternate" href={`${siteBase}/es${route === '/' ? '/' : route}`} hreflang="es" />
  <link rel="alternate" href={`${siteBase}/en${route === '/' ? '/' : route}`} hreflang="en" />
  <link rel="alternate" href={`${siteBase}/es${route === '/' ? '/' : route}`} hreflang="x-default" />
    <!-- Open Graph / Facebook -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogimage.url} />
    <meta property="og:image:alt" content={ogimage.alt} />
    <meta property="og:url" content={SEO.url} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={SEO.sitename} />
  <meta property="og:locale" content={SEO.locale} />
  <meta property="og:locale:alternate" content={lang === 'es' ? 'en_US' : 'es_ES'} />
    

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={twitterimage} />
    <meta name="twitter:image:alt" content={ogimage.alt} />
    <meta name="twitter:site" content={SEO.twitter} />
  
    <meta name="theme-color" content="#0E0E11"/>

    <!-- Sitemap -->
    <link rel="sitemap" href="/sitemap-index.xml" />
    
  </head>
  <body class="overflow-x-hidden">
    <a href="#main" class="skip-link fixed left-2 top-2 -translate-y-20 focus:translate-y-0 transition-all bg-black text-white px-4 py-2 rounded z-[1000] focus:outline-none focus:ring-2 focus:ring-mint-400">{lang === 'es' ? 'Saltar al contenido' : 'Skip to content'}</a>
    <SpeedInsights/>
    <div class="blur-circle"></div>
    <div
      style="  background:linear-gradient(45deg, rgba(96, 250, 155, 0) 10.79%, rgba(96, 250, 170, 0.03) 40.92%, rgba(96, 250, 155, 0) 90.35%)"
      class="fixed top-0 left-0 w-full h-full pointer-events-none -z-1"
    >
    </div>
    <Header />

    <main id="main" tabindex="-1" class="min-h-[85vh] focus:outline-none focus:ring-2 focus:ring-mint-400">
      <slot />
    </main>

    <Footer />
    <script>
      import "../scripts/menu.js";
      // Enfocar main al activar skip link via hash (caso navegadores que no auto scroll)
      if (window.location.hash === '#main') {
        const m = document.getElementById('main');
        m && m.focus();
      }
      window.addEventListener('hashchange', () => {
        if (window.location.hash === '#main') {
          const m = document.getElementById('main');
          setTimeout(() => m && m.focus(), 0);
        }
      });
    </script>
  </body>
</html>
