---
import Layout from "../../layouts/Layout.astro";
import Experience from "../../components/portfolio/Experience.astro";
import HeroIndex from "../../components/portfolio/HeroIndex.astro";
import Contact from "../../components/portfolio/Contact.astro";
import ListProjects from "../../components/portfolio/ListProjects.astro";
import { Icon } from "astro-icon/components";
import Heading from "../../components/ui/Heading.astro";
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const pageTitle = "Alex Ballera | Senior Frontend Developer | Portfolio";
const description = "Portfolio personal de Alex Ballera, desarrollador Frontend especializado en React, Angular y Next.js.";
const ogimage = {
  url: "/images/imagedefault.webp",
  alt: "Screenshot of a web portfolio with a modern and dark design. Featuring Alex Ballera, a Senior Frontend Developer with 6 years of experience, highlighting his passion for development and technology. Includes contact sections, projects, and a technology stack with technologies like HTML5, JavaScript, TypeScript, Angular, Node.js, CSS, Tailwind, and more.",
};
---

<Layout pageTitle={pageTitle} description={description} ogimage={ogimage}>
  <!-- Script scroll spy sÃ³lo para home ES -->
  <script src="/scripts/scroll-spy.js" is:inline></script>
  <HeroIndex />

  <section
    class="py-4 px-8 max-md:py-3 mb-4 scroll-m-16"
    id="experience"
  >
    <div class="flex flex-col pt-4 max-w-4xl mx-auto">
      <div class="flex gap-4 items-center justify-center">
        <Icon class="text-3xl dark:text-white text-blacktext" name="briefcase" />
        <Heading text={t('about.experience')} textGradient={t('about.work')} level={2}/>
      </div>

      <Experience />
    </div>
  </section>

  <section
    class="bg-linear-to-t dark:from-[#0e0e10] from-white from-50% to-transparent to-100% scroll-m-16"
    id="projects"
  >
    <div class="flex flex-col gap-8 max-w-7xl mx-auto">
      <ListProjects>
        <div class="flex gap-4 items-center justify-center text-center">
          <Icon class="text-3xl dark:text-white text-blacktext" name="code" />
          <Heading text={t('hero.projects')} textGradient={t('projects.completed')} level={2}/>
        </div>
        <p
          class="z-2 text-center mx-auto text-lg max-xl:text-base max-w-2xl dark:text-gray-200 text-blacktext my-6 leading-6 font-medium"
        >
          {t('hero.projectsDescription')} <b
            class=" bg-linear-to-r  from-riptide-500 to-mint-500 dark:from-riptide-300 dark:to-mint-200 text-transparent bg-clip-text"
            >{t('hero.projectsDescriptionHighlight1')}</b
          >
          <br /> {t('hero.projectsDescriptionPart2')} <b
            class="d bg-linear-to-r  from-riptide-500 to-mint-500 dark:from-riptide-300 dark:to-mint-200 text-transparent bg-clip-text"
            >{t('hero.projectsDescriptionHighlight2')}</b
          > {t('hero.projectsDescriptionPart3')}
          <b
            class=" bg-linear-to-r  from-riptide-500 to-mint-500 dark:from-riptide-300 dark:to-mint-200 text-transparent bg-clip-text"
            >{t('hero.projectsDescriptionHighlight3')}</b
          >
        </p>
      </ListProjects>
    </div>
  </section>


  <Contact />
</Layout>
