---
// Updated tech stack - using modern technologies from languages.ts
const allTools = [
  "html",
  "javascript",
  "ts",
  "angular",
  "react",
  "nextjs",
  "node",
  "python",
  "css",
  "tailwind",
  "sass",
  "sql",
  "git",
  "docker",
  "copilot",
  "chatgpt",
];

// Business/soft skills with their corresponding icons
const businessTools = [
  "leadership",
  "marketing",
  "finance",
  "strategy", 
  "management",
  "branding",
  "valuation",
];

import Capsule from "../ui/Capsule.astro";

type ToolVariant = "default" | "center";

// Base classes that are common to all variants
const baseClasses = "flex flex-wrap gap-3 max-lg:gap-2 grid-auto-efe";

// Variant-specific classes
const variantClasses: Record<ToolVariant, string> = {
  default: "cursor-default",
  center: "justify-center cursor-default",
};

const { variant = "default", linkEnabled = false, size = "md" } = Astro.props;

// Combine base classes with variant-specific classes
const classes = `${baseClasses} ${variantClasses[variant as ToolVariant]}`;
---

<!-- Render tech stack capsules -->
<div class={classes}>
  {allTools.map((tool) => (
    <Capsule name={tool} linkEnabled={linkEnabled} size={size} />
  ))}
  {businessTools.map((tool) => (
    <Capsule name={tool} linkEnabled={linkEnabled} size={size} />
  ))}
</div>
